{% extends 'base.html.twig' %}

{% block title %}Search
{% endblock %}

{% block body %}
	<div class="test">
		<div class="header">
			<h4>results for the query
				{{searchedGame}}
				: Found
				{{count}}
				games</h4>

		</div>
		<div class="cardContainer">
			{% for game in games %}
				<div class="gameCard">

					<div class="screenshots" data-game-screenshots="{{ game.screenshots|json_encode }}">
						<img class="screenshot-image" src="{{ game.screenshots[0] }}" alt="Screenshot">
					</div>

					<div class="cardContent">
						<div class="titleContainer">
							<a href="{{ path('app_game_details', {'id': game.gameId}) }}">
								<h2>{{game.title}}</h2>
							</a>
							{% if game.metacritics %}
								<div class="metacritics">
									<p>{{game.metacritics}}</p>
								</div>
							{% endif %}
						</div>
						<div>
							<p>Plateforms :</p>
							{% for parentPlatform in game.parentPlatform %}

								<div class="platform">
									<img src="{{ asset('assets/image/' ~ parentPlatform ~ '.svg') }}" alt="{{ parentPlatform }}"/>
								</div>
							{% endfor %}
						</div>

						<div>
							<p>Genres :</p>
							{% for genre in game.genres %}
								<a class="genreLink" href="{{ path('app_genre', {'genre': genre.name}) }}">{{genre.name}}</a>
							{% endfor %}
						</div>
					</div>

				</div>

			{% endfor %}
	</div>
</div>
				
{% endblock %}
