{% extends 'base.html.twig' %}

{% block title %}Project Masterpiece
{% endblock %}

{% block body %}
	<div class="test">
		<div class="header"></div>
		<div class="cardContainer">
			{% for game in games %}
				<div class="gameCard">

					<div class="screenshots" data-game-screenshots="{{ game.screenshots|json_encode }}">
						<img class="screenshot-image" src="{{ game.screenshots[0] }}" alt="Screenshot">
					</div>

					<div class="cardContent">
						<div class="titleContainer">
							<a href="{{ path('app_game_details', {'id': game.gameId}) }}">
								<h2>{{game.title}}</h2>
							</a>
							{% if game.metacritics %}
								<div class="metacritics">
									<p>{{game.metacritics}}</p>
								</div>
							{% endif %}
						</div>
						<div>
							<p>Plateforms :</p>
							{% for platform in game.platforms %}
								<p>{{platform.name}}</p>
							{% endfor %}
						</div>

						<div>
							<p>Genres :</p>
							{% for genre in game.genres %}
								<p>{{genre.name}}</p>
							{% endfor %}
						</div>
					</div>

				</div>

			{% endfor %}


		</div>
	</div>

{% endblock %}
