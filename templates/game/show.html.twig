{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ game.summary }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ game.releaseDate ? game.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ game.website }}</td>
            </tr>
            <tr>
                <th>Metacritics</th>
                <td>{{ game.metacritics }}</td>
            </tr>
            <tr>
                <th>BackgroundImage</th>
                <td>{{ game.backgroundImage }}</td>
            </tr>
            <tr>
                <th>ParentPlatform</th>
                <td>{{ game.parentPlatform ? game.parentPlatform|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>GameId</th>
                <td>{{ game.gameId }}</td>
            </tr>
            <tr>
                <th>Screenshots</th>
                <td>{{ game.screenshots ? game.screenshots|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
